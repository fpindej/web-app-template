{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Error",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ]
  },
  "ConnectionStrings": {
    "Database": "<DB_CONNECTION_STRING>"
  },
  "Caching": {
    "DefaultExpiration": "00:10:00",
    "Redis": {
      "Enabled": false,
      "ConnectionString": "<REDIS_CONNECTION_STRING>",
      "Password": "<REDIS_PASSWORD>",
      "UseSsl": true,
      "DefaultDatabase": 0,
      "InstanceName": "{INIT_PROJECT_SLUG}:",
      "ConnectTimeoutMs": 5000,
      "SyncTimeoutMs": 5000,
      "AsyncTimeoutMs": 5000,
      "AbortOnConnectFail": false,
      "ConnectRetry": 3,
      "KeepAliveSeconds": 60
    },
    "InMemory": {
      "SizeLimit": 1024,
      "ExpirationScanFrequency": "00:01:00",
      "CompactionPercentage": 0.05
    }
  },
  "RateLimiting": {
    "Global": {
      "PermitLimit": 120,
      "Window": "00:01:00"
    }
  },
  "Authentication": {
    "Jwt": {
      "Key": "A_Very_Long_Secure_Random_Secret_Key_ChangeThis123!@#4567890",
      "Issuer": "MyProjectIssuer",
      "Audience": "MyProjectAudience",
      "ExpiresInMinutes": 10,
      "SecurityStampClaimType": "security_stamp",
      "RefreshToken": {
        "ExpiresInDays": 7
      }
    }
  },
  "Cors": {
    "AllowAllOrigins": false,
    "AllowedOrigins": [
      "https://your-production-domain.com"
    ],
    "PolicyName": "DefaultCorsPolicy"
  },
  "AllowedHosts": "*"
}
