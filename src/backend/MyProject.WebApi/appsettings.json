{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Error",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ]
  },
  "ConnectionStrings": {
    "Database": "<DB_CONNECTION_STRING>"
  },
  "Redis": {
    "Enabled": false,
    "ConnectionString": "<REDIS_HOST:PORT>",
    "Password": "<REDIS_PASSWORD>",
    "UseSsl": true,
    "DefaultDatabase": 0,
    "InstanceName": "{INIT_PROJECT_SLUG}:",
    "DefaultExpiration": "00:10:00",
    "ConnectTimeoutMs": 5000,
    "SyncTimeoutMs": 5000,
    "AsyncTimeoutMs": 5000,
    "AbortOnConnectFail": false,
    "ConnectRetry": 3,
    "KeepAliveSeconds": 60,
    "InMemorySizeLimit": 1024
  },
  "RateLimiting": {
    "Global": {
      "PermitLimit": 120,
      "Window": "00:01:00"
    }
  },
  "Authentication": {
    "Jwt": {
      "Key": "A_Very_Long_Secure_Random_Secret_Key_ChangeThis123!@#4567890",
      "Issuer": "MyProjectIssuer",
      "Audience": "MyProjectAudience",
      "ExpiresInMinutes": 10,
      "SecurityStampClaimType": "security_stamp",
      "RefreshToken": {
        "ExpiresInDays": 7
      }
    }
  },
  "Cors": {
    "AllowAllOrigins": false,
    "AllowedOrigins": [
      "https://your-production-domain.com"
    ],
    "PolicyName": "DefaultCorsPolicy"
  },
  "AllowedHosts": "*"
}
